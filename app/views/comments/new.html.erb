<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%= link_to 'Back', "/recipes/#{@recipe.id}", class:"btn-back-modal" %>
        <h1 class="comments-header">Leave a Comment</h1>
      </div>
      <div class="modal-body">
          <%= simple_form_for ([ @recipe, @recipe.comments.build]), class:"comment-form" do |f| %>
          <%= f.error_notification %>
          <%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
          <%= f.input :name, error: f.object.errors.full_messages_for(:name).to_sentence, label: false, placeholder: "Your name", class:"comment-form-name" %>
          <%= f.input :comment, error: f.object.errors.full_messages_for(:comment).to_sentence, label: false, required: true, placeholder: "Tell us about your experience", class:"comment-form-text" %>
          <%= f.submit "Submit", class: "btn-comment-submit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
